{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**",
                "!.next/cache/**",
                "build/**"
            ]
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ]
        },
        "lint:fix": {
            "dependsOn": [
                "^lint:fix"
            ]
        },
        "format": {
            "dependsOn": [
                "^format"
            ]
        },
        "format:fix": {
            "dependsOn": [
                "^format:fix"
            ]
        },
        "typecheck": {
            "dependsOn": [
                "^typecheck"
            ]
        },
        "test": {
            "dependsOn": [
                "^test"
            ]
        },
        "test:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    },
    "globalDependencies": [
        "**/.env.*local",
        ".env",
        ".env.local",
        ".env.development",
        ".env.production"
    ]
}